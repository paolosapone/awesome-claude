{
    "name": "claude-vscode-theme",
    "displayName": "Claude VSCode Theme",
    "description": "Thoughtful dark theme collection with classic and italic variants. Inspired by Claude AI with carefully balanced contrast and warm syntax colors for long coding sessions.",
    "version": "2.0.0",
    "publisher": "AlvinUnreal",
    "license": "MIT",
    "type": "module",
    "packageManager": "pnpm@9.0.0",
    "engines": {
        "vscode": "^1.80.0",
        "node": ">=20.0.0"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "theme",
        "claude",
        "dark",
        "italic",
        "minimal",
        "clean",
        "contrast",
        "accessibility",
        "anthropic",
        "typography",
        "maple-mono",
        "victor-mono",
        "coding-font",
        "syntax-highlighting"
    ],
    "icon": "logo.png",
    "galleryBanner": {
        "color": "#C15F3C",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/paolosapone/awesome-claude.git"
    },
    "bugs": {
        "url": "https://github.com/paolosapone/awesome-claude/issues"
    },
    "contributes": {
        "themes": [
            {
                "label": "Claude Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/claude-dark.json"
            },
            {
                "label": "Claude Dark High Contrast",
                "uiTheme": "vs-dark",
                "path": "./themes/claude-dark-high-contrast.json"
            },
            {
                "label": "Claude Dark Italic",
                "uiTheme": "vs-dark",
                "path": "./themes/claude-dark-italic.json"
            },
            {
                "label": "Claude Dark High Contrast Italic",
                "uiTheme": "vs-dark",
                "path": "./themes/claude-dark-high-contrast-italic.json"
            }
        ]
    },
    "scripts": {
        "build": "tsx build.ts",
        "dev": "tsx build.ts --dev",
        "package": "vsce package",
        "compile": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^2.22.0",
        "tsx": "^4.6.0",
        "typescript": "^5.3.0"
    }
}
